<controls:MetroUserControl x:Class="MetroDemo.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <controls:MetroUserControl.Flyouts>
        <controls:UserControlFlyoutsControl>
            <controls:UserControlFlyout Header="New Goodness" Position="Right" Theme="Accent">
                <StackPanel Orientation="Vertical"
                            Margin="10">
                    <Button Content="create" />
                    <Button Content="cancel" />
                </StackPanel>
            </controls:UserControlFlyout>
            <controls:UserControlFlyout Header="More Goodness" Position="Left" >
                <StackPanel Orientation="Vertical"
                            Margin="10">
                    <Button Content="create" />
                </StackPanel>
            </controls:UserControlFlyout>
        </controls:UserControlFlyoutsControl>
    </controls:MetroUserControl.Flyouts>
    
    <Grid>
        <StackPanel>
            <Label Content="User Control 1" HorizontalAlignment="Center" />
            <Button Width="120"   Height="25" Content="Toggle Right Flyout"  Click="ShowRightFlyout_Click"/>
            <Button Width="120"   Height="25" Content="Toggle Left Flyout"  Click="ShowLeftFlyout_Click"/>
        </StackPanel>
    </Grid>
</controls:MetroUserControl>
