<Controls:MetroWindow x:Class="MetroDemo.ExampleWindows.RibbonDemo"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:metroDemo="clr-namespace:MetroDemo"
                      Title="RibbonDemo"
                      Width="800"
                      Height="600"
                      BorderThickness="1"
                      BorderBrush="{DynamicResource AccentColorBrush}"
                      Style="{DynamicResource CleanWindowStyleKey}"
                      mc:Ignorable="d"
                      d:DesignHeight="400"
                      d:DesignWidth="300"
                      d:DataContext="{d:DesignInstance metroDemo:MainWindowViewModel}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro.Resources;component/Icons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Clean/CleanWindow.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Ribbon/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Ribbon Grid.Row="0"
                Loaded="Ribbon_Loaded">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu KeyTip="F">
                    <RibbonApplicationMenuItem Header="Open"
                                          Command="Open"
                                          KeyTip="O" />
                    <RibbonApplicationMenuItem Header="Save"
                                          Command="Save"
                                          KeyTip="S" />
                    <RibbonApplicationSplitMenuItem Header="Save As"
                                               Command="SaveAs" 
                                               KeyTip="V" >
                        <RibbonApplicationMenuItem Header="Rich Text document"
                                              Command="SaveAs" CommandParameter="rtf"
                                              KeyTip="R" />
                        <RibbonApplicationMenuItem Header="Plain Text document"
                                              Command="SaveAs" CommandParameter="txt"
                                              KeyTip="P" />
                        <RibbonApplicationMenuItem Header="Other format"
                                              Command="SaveAs"
                                              KeyTip="O" />
                    </RibbonApplicationSplitMenuItem>
                    <RibbonSeparator />
                    <RibbonApplicationSplitMenuItem Header="Print"
                                               KeyTip="R">
                        <RibbonApplicationMenuItem Header="Print"
                                              KeyTip="P" />
                        <RibbonApplicationMenuItem Header="Quick Print"
                                              KeyTip="Q" />
                        <RibbonApplicationMenuItem Header="Print Preview"
                                              KeyTip="V" />
                    </RibbonApplicationSplitMenuItem>
                    <RibbonApplicationMenuItem Header="Page Setup"
                                          KeyTip="G" />
                    <RibbonApplicationMenu.FooterPaneContent>
                        <DockPanel LastChildFill="False">
                            <RibbonButton Command="ApplicationCommands.Close"
                                     Label="Exit"
                                     ToolTipTitle="Exit" 
                                     KeyTip="X"
                                     DockPanel.Dock="Right"
                                     Margin="2"
                                     BorderBrush="#B8114EAF" />
                        </DockPanel>
                    </RibbonApplicationMenu.FooterPaneContent>
                    <RibbonApplicationMenu.AuxiliaryPaneContent>
                        <RibbonGallery CanUserFilter="False"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <RibbonGalleryCategory Header="Recent Documents"
                                              Background="Transparent" >
                                <RibbonGalleryCategory.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" IsItemsHost="True"/>
                                    </ItemsPanelTemplate>
                                </RibbonGalleryCategory.ItemsPanel>
                                <RibbonGalleryItem ></RibbonGalleryItem>
                            </RibbonGalleryCategory>
                        </RibbonGallery>
                    </RibbonApplicationMenu.AuxiliaryPaneContent>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab Header="Home">
                <RibbonGroup Header="Theme">
                    <RibbonButton Click="DarkTheme"
                                  Label="Dark" />
                    <RibbonButton Click="LightTheme"
                                  Label="Light" />
                    <RibbonComboBox CanUserResizeVertically="True"
                                    SelectionBoxWidth="100">
                        <RibbonGallery x:Name="accentsComboBox"
                                       SelectionChanged="Accents_SelectionChanged">
                            <RibbonGalleryCategory x:Name="accents"
                                                   ItemsSource="{Binding AccentColors, Mode=OneWay}" />
                            <RibbonGallery.GalleryItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="16"
                                                 Height="16"
                                                 Fill="{Binding ColorBrush,
                                                                Mode=OneWay}" />
                                        <TextBlock Grid.Column="1"
                                                   Margin="4,0,0,0"
                                                   Text="{Binding Name,
                                                                  Mode=OneWay}" />
                                    </Grid>
                                </DataTemplate>
                            </RibbonGallery.GalleryItemTemplate>
                        </RibbonGallery>
                    </RibbonComboBox>
                </RibbonGroup>
                <RibbonGroup Header="Radio Buttons">
                    <RibbonRadioButton Label="Blue" />
                    <RibbonRadioButton Label="Red" />
                    <RibbonRadioButton Label="Green" />
                </RibbonGroup>
                <RibbonGroup Header="More Buttons">
                    <RibbonSplitButton Label="Split Button">
                        <RibbonMenuItem Header="Option 1" />
                        <RibbonMenuItem Header="Option 2" />
                        <RibbonMenuItem Header="Option 3" />
                    </RibbonSplitButton>
                    <RibbonToggleButton Label="Toggle Button" />
                    <RibbonMenuButton Label="Menu Button">
                        <RibbonMenuItem Header="Option 1" />
                        <RibbonSplitMenuItem Header="Option 2">
                            <RibbonMenuItem Header="Option a" />
                            <RibbonMenuItem Header="Option b" />
                        </RibbonSplitMenuItem>
                        <RibbonMenuItem Header="Option 3" />
                    </RibbonMenuButton>
                </RibbonGroup>
            </RibbonTab>
            <RibbonTab Header="Tab 2" />
        </Ribbon>
        <Grid Grid.Row="1">
            <StackPanel Grid.Column="0">
                <Label Content="Buttons"
                       Style="{DynamicResource DescriptionHeaderStyle}" />
                <Button Width="100"
                        Margin="0, 10, 0, 0"
                        Content="Enabled" />
                <Button Width="100"
                        Margin="0, 10, 0, 0"
                        Content="Enabled"
                        Style="{DynamicResource SquareButtonStyle}" />
                <Button Width="100"
                        Margin="0, 10, 0, 0"
                        Content="Enabled"
                        Style="{DynamicResource AccentedSquareButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Controls:MetroWindow>
