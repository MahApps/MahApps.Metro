<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:MahApps.Metro.Controls"
                    xmlns:ControlzEx="urn:controlzex"
                    xmlns:Converters="clr-namespace:MahApps.Metro.Converters"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Shared.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Themes/MahApps.Styles.ColorCanvas.Slider.HueSlider.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Converters:PercentageToGridLengthConverter x:Key="PercentageToGridLengthConverter" />

    <DrawingBrush x:Key="CheckerdBrush"
                  TileMode="Tile"
                  Viewport="0,0,20,20"
                  ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <GeometryDrawing Brush="{DynamicResource MahApps.Brushes.Gray7}">
                <GeometryDrawing.Geometry>
                    <GeometryGroup>
                        <RectangleGeometry Rect="0,0,10,10" />
                        <RectangleGeometry Rect="10,10,10,10" />
                    </GeometryGroup>
                </GeometryDrawing.Geometry>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <Style TargetType="{x:Type Controls:ColorCanvas}">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:ColorCanvas}">
                    <Grid SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="110" />
                                    <ColumnDefinition Width="25" />
                                    <ColumnDefinition Width="*" MinWidth="110" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"
                                                   MinHeight="110"
                                                   MaxHeight="310" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Saturation and Value  -->
                                <Border x:Name="PART_SaturationValueBox"
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="5"
                                        BorderBrush="{DynamicResource MahApps.Brushes.Black}"
                                        BorderThickness="1">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="PART_SaturationValueBox_Background" Color="Red" />
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Saturation, Converter={StaticResource PercentageToGridLengthConverter}}" />
                                            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Saturation, Converter={StaticResource PercentageToGridLengthConverter}, ConverterParameter=true}" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value, Converter={StaticResource PercentageToGridLengthConverter}, ConverterParameter=true}" />
                                            <RowDefinition Height="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value, Converter={StaticResource PercentageToGridLengthConverter}}" />
                                        </Grid.RowDefinitions>

                                        <!--  Gradients to display Saturation and Value  -->
                                        <Grid.Background>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="0" Color="White" />
                                                <GradientStop Offset="1" Color="Transparent" />
                                            </LinearGradientBrush>
                                        </Grid.Background>
                                        <Grid Grid.RowSpan="2" Grid.ColumnSpan="2">
                                            <Grid.Background>
                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                    <GradientStop Offset="0" Color="#00000000" />
                                                    <GradientStop Offset="1" Color="Black" />
                                                </LinearGradientBrush>
                                            </Grid.Background>
                                        </Grid>

                                        <!--  Fade  -->
                                        <Rectangle Grid.RowSpan="2"
                                                   Width="3"
                                                   Margin="-1.5 0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Stretch"
                                                   Fill="White" />
                                        <Rectangle Grid.ColumnSpan="2"
                                                   Height="3"
                                                   Margin="0 -1.5"
                                                   HorizontalAlignment="Stretch"
                                                   VerticalAlignment="Bottom"
                                                   Fill="White" />

                                        <Rectangle Grid.RowSpan="2"
                                                   Width="1"
                                                   Margin="-0.5 0"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Stretch"
                                                   Fill="Black" />
                                        <Rectangle Grid.ColumnSpan="2"
                                                   Height="1"
                                                   Margin="0 -0.5"
                                                   HorizontalAlignment="Stretch"
                                                   VerticalAlignment="Bottom"
                                                   Fill="Black" />

                                    </Grid>
                                </Border>

                                <!--  HueSlider  -->
                                <Slider Grid.Column="1"
                                        Margin="0 5 5 5"
                                        IsMoveToPointEnabled="True"
                                        Style="{StaticResource MahApps.Styles.Slider.HueSlider}"
                                        Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Hue}" />

                                <!--  Selected Color Preview and Opacity  -->
                                <Grid Grid.Row="1" Margin="5 0 5 5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Margin="0 2" Text="Preview" />


                                    <Border Grid.Row="0"
                                            Grid.Column="1"
                                            Height="30"
                                            Margin="5 0 0 5"
                                            Background="{StaticResource CheckerdBrush}"
                                            BorderBrush="{DynamicResource MahApps.Brushes.Black}"
                                            BorderThickness="1">
                                        <Rectangle>
                                            <Rectangle.Fill>
                                                <SolidColorBrush Color="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=SelectedColor}" />
                                            </Rectangle.Fill>
                                        </Rectangle>
                                    </Border>

                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Text="Opacity" />

                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" MinWidth="110" />
                                        </Grid.ColumnDefinitions>

                                        <Slider Grid.Column="0"
                                                Margin="5 0 2 0"
                                                Maximum="255"
                                                Minimum="0"
                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=A}" />
                                        <Controls:NumericUpDown Grid.Column="1"
                                                                Maximum="255"
                                                                Minimum="0"
                                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=A}" />

                                    </Grid>

                                </Grid>

                                <!--  Sliders for Values  -->
                                <ScrollViewer Grid.Column="2"
                                              Margin="0 5 5 5"
                                              HorizontalScrollBarVisibility="Auto"
                                              VerticalScrollBarVisibility="Auto">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="{DynamicResource MahApps.Sizes.Font.Normal}" />
                                            <ColumnDefinition Width="*" MinWidth="50" />
                                            <ColumnDefinition Width="Auto" MinWidth="100" />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  R  -->
                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Text="R" />
                                        <Slider Grid.Row="0"
                                                Grid.Column="1"
                                                Maximum="255"
                                                Minimum="0"
                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=R}" />
                                        <Controls:NumericUpDown Grid.Row="0"
                                                                Grid.Column="2"
                                                                Margin="2"
                                                                Maximum="255"
                                                                Minimum="0"
                                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=R}" />

                                        <!--  G  -->
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Text="G" />
                                        <Slider Grid.Row="1"
                                                Grid.Column="1"
                                                Maximum="255"
                                                Minimum="0"
                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=G}" />
                                        <Controls:NumericUpDown Grid.Row="1"
                                                                Grid.Column="2"
                                                                Margin="2"
                                                                Maximum="255"
                                                                Minimum="0"
                                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=G}" />

                                        <!--  B  -->
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Text="B" />
                                        <Slider Grid.Row="2"
                                                Grid.Column="1"
                                                Maximum="255"
                                                Minimum="0"
                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=B}" />
                                        <Controls:NumericUpDown Grid.Row="2"
                                                                Grid.Column="2"
                                                                Margin="2"
                                                                Maximum="255"
                                                                Minimum="0"
                                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=B}" />

                                        <!--  H  -->
                                        <TextBlock Grid.Row="3"
                                                   Grid.Column="0"
                                                   Margin="0 8 0 0"
                                                   VerticalAlignment="Center"
                                                   Text="H" />
                                        <Slider Grid.Row="3"
                                                Grid.Column="1"
                                                Margin="0 8 0 0"
                                                Maximum="360"
                                                Minimum="0"
                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Hue}" />
                                        <Controls:NumericUpDown Grid.Row="3"
                                                                Grid.Column="2"
                                                                Margin="2 10 2 2"
                                                                Maximum="360"
                                                                Minimum="0"
                                                                StringFormat="0 °"
                                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Hue}" />

                                        <!--  S  -->
                                        <TextBlock Grid.Row="4"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Text="S" />
                                        <Slider Grid.Row="4"
                                                Grid.Column="1"
                                                Maximum="1"
                                                Minimum="0"
                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Saturation}" />
                                        <Controls:NumericUpDown Grid.Row="4"
                                                                Grid.Column="2"
                                                                Margin="2"
                                                                Maximum="1"
                                                                Minimum="0"
                                                                StringFormat="p0"
                                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Saturation}" />

                                        <!--  Value  -->
                                        <TextBlock Grid.Row="5"
                                                   Grid.Column="0"
                                                   VerticalAlignment="Center"
                                                   Text="V" />
                                        <Slider Grid.Row="5"
                                                Grid.Column="1"
                                                Maximum="1"
                                                Minimum="0"
                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value}" />
                                        <Controls:NumericUpDown Grid.Row="5"
                                                                Grid.Column="2"
                                                                Margin="2"
                                                                Maximum="1"
                                                                Minimum="0"
                                                                StringFormat="p0"
                                                                Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value}" />

                                    </Grid>
                                </ScrollViewer>

                                <!--  HTML String und Name  -->

                                <Grid Grid.Row="2"
                                      Grid.Column="2"
                                      Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Text="Hex-Code " />
                                    <TextBox x:Name="TextBox_HexCode"
                                             Grid.Row="0"
                                             Grid.Column="1"
                                             Margin="2"
                                             Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=HexCode, Mode=TwoWay, ValidatesOnExceptions=True}" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Text="Name " />
                                    <TextBox Grid.Row="1"
                                             Grid.Column="1"
                                             Margin="2"
                                             IsReadOnly="True"
                                             Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ColorName, Mode=OneWay, TargetNullValue='Unknown'}" />
                                    <Button x:Name="PART_PickColorFromScreen"
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            Width="{Binding ElementName=TextBox_HexCode, Path=ActualHeight}"
                                            Height="{Binding ElementName=TextBox_HexCode, Path=ActualHeight}">

                                        <Button.Resources>
                                            <Cursor x:Key="MahApps.Cursors.EyeDropper">../Controls/ColorPicker/Eyedropper.cur</Cursor>
                                        </Button.Resources>

                                        <Button.Content>
                                            <Viewbox Stretch="Uniform">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M19.35,11.72L17.22,13.85L15.81,12.43L8.1,20.14L3.5,22L2,20.5L3.86,15.9L11.57,8.19L10.15,6.78L12.28,4.65L19.35,11.72M16.76,3C17.93,1.83 19.83,1.83 21,3C22.17,4.17 22.17,6.07 21,7.24L19.08,9.16L14.84,4.92L16.76,3M5.56,17.03L4.5,19.5L6.97,18.44L14.4,11L13,9.6L5.56,17.03Z" Fill="{DynamicResource MahApps.Brushes.Black}" />
                                                </Canvas>
                                            </Viewbox>
                                        </Button.Content>

                                        <Button.ToolTip>
                                            <ToolTip DataContext="Magenta">
                                                <ToolTip.Template>
                                                    <ControlTemplate>
                                                        <Border Background="{DynamicResource MahApps.Brushes.White}"
                                                                BorderBrush="{DynamicResource MahApps.Brushes.Gray5}"
                                                                BorderThickness="1">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="*" />
                                                                </Grid.ColumnDefinitions>
                                                                <Ellipse Width="{DynamicResource MahApps.Font.Size.Content}"
                                                                         Height="{DynamicResource MahApps.Font.Size.Content}"
                                                                         Margin="5"
                                                                         Stroke="{DynamicResource MahApps.Brushes.Gray5}"
                                                                         StrokeThickness="1">
                                                                    <Ellipse.Fill>
                                                                        <SolidColorBrush Color="{Binding TargetNullValue='#FF0000'}" />
                                                                    </Ellipse.Fill>
                                                                </Ellipse>
                                                                <TextBlock Grid.Column="1"
                                                                           Margin="5"
                                                                           FontFamily="Consolas"
                                                                           Text="{Binding TargetNullValue='#FF0000'}"
                                                                           TextOptions.TextFormattingMode="Display"
                                                                           TextOptions.TextRenderingMode="ClearType" />
                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ToolTip.Template>
                                            </ToolTip>
                                        </Button.ToolTip>
                                    </Button>
                                </Grid>

                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>