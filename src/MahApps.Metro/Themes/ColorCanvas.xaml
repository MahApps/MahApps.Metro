<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:MahApps.Metro.Controls"
                    xmlns:Converters="clr-namespace:MahApps.Metro.Converters"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Shared.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Themes/MahApps.Styles.ColorCanvas.Slider.HueSlider.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Converters:PercentageToGridLengthConverter x:Key="PercentageToGridLengthConverter" />

    <DrawingBrush x:Key="CheckerdBrush" TileMode="Tile" ViewportUnits="Absolute" Viewport="0,0,20,20">
        <DrawingBrush.Drawing>
            <GeometryDrawing Brush="{DynamicResource MahApps.Brushes.Gray7}">
                <GeometryDrawing.Geometry>
                    <GeometryGroup>
                        <RectangleGeometry Rect="0,0,10,10" />
                        <RectangleGeometry Rect="10,10,10,10" />
                    </GeometryGroup>
                </GeometryDrawing.Geometry>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <Style TargetType="{x:Type Controls:ColorCanvas}">
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:ColorCanvas}">
                    <Grid SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="110"/>
                                    <ColumnDefinition Width="25" />
                                    <ColumnDefinition Width="*" MinWidth="110"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" MinHeight="110"  MaxHeight="310"/>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Saturation and Value -->
                                <Border x:Name="PART_SaturationValueBox"
                                        Grid.Column="0" 
                                        Grid.Row="0"
                                        BorderBrush="{DynamicResource MahApps.Brushes.Black}"
                                        Margin="5"
                                        BorderThickness="1">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="PART_SaturationValueBox_Background"
                                                         Color="Red" />
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Saturation, Converter={StaticResource PercentageToGridLengthConverter}}" />
                                            <ColumnDefinition Width="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Saturation, Converter={StaticResource PercentageToGridLengthConverter}, ConverterParameter=true}" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value, Converter={StaticResource PercentageToGridLengthConverter}, ConverterParameter=true}" />
                                            <RowDefinition Height="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value, Converter={StaticResource PercentageToGridLengthConverter}}" />
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Gradients to display Saturation and Value -->
                                        <Grid.Background>
                                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                                <GradientStop Offset="0" Color="White" />
                                                <GradientStop Offset="1" Color="Transparent" />
                                            </LinearGradientBrush>
                                        </Grid.Background>
                                        <Grid Grid.ColumnSpan="2"
                                              Grid.RowSpan="2">
                                            <Grid.Background>
                                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                    <GradientStop Offset="0" Color="#00000000" />
                                                    <GradientStop Offset="1" Color="Black" />
                                                </LinearGradientBrush>
                                            </Grid.Background>
                                        </Grid>

                                        <!-- Fade -->
                                        <Rectangle Width="3" 
                                                   Grid.RowSpan="2"
                                                   Margin="-1.5,0"
                                                   VerticalAlignment="Stretch" 
                                                   HorizontalAlignment="Right"
                                                   Fill="White" />
                                        <Rectangle Height="3" 
                                                   Grid.ColumnSpan="2"
                                                   Margin="0,-1.5"
                                                   VerticalAlignment="Bottom" 
                                                   HorizontalAlignment="Stretch"
                                                   Fill="White" />

                                        <Rectangle Width="1" 
                                                   Grid.RowSpan="2"
                                                   Margin="-0.5,0"
                                                   VerticalAlignment="Stretch" 
                                                   HorizontalAlignment="Right"
                                                   Fill="Black" />
                                        <Rectangle Height="1" 
                                                   Grid.ColumnSpan="2"
                                                   Margin="0,-0.5"
                                                   VerticalAlignment="Bottom" 
                                                   HorizontalAlignment="Stretch"
                                                   Fill="Black" />

                                    </Grid>
                                </Border>

                                <!-- HueSlider -->
                                <Slider Grid.Column="1"
                                        Style="{StaticResource MahApps.Styles.Slider.HueSlider}" 
                                        Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Hue}"
                                        IsMoveToPointEnabled="True"
                                        Margin="0,5,5,5" />

                                <!-- Selected Color Preview and Opacity -->
                                <Border Grid.Column="0"
                                        Grid.Row="1" 
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource MahApps.Brushes.Black}" 
                                        Background="{StaticResource CheckerdBrush}"
                                        Margin="5"
                                        Height="40">
                                    <Rectangle>
                                        <Rectangle.Fill>
                                            <SolidColorBrush Color="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=SelectedColor}" />
                                        </Rectangle.Fill>
                                    </Rectangle>
                                </Border>

                                <!-- Sliders for Values -->
                                <ScrollViewer Grid.Column="2" 
                                              Grid.RowSpan="2"
                                              Margin="0,5,5,5"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Auto">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" MinWidth="{DynamicResource MahApps.Sizes.Font.Normal}" />
                                            <ColumnDefinition Width="*" MinWidth="50"/>
                                            <ColumnDefinition Width="Auto" MinWidth="100"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        
                                        <!-- R -->
                                        <TextBlock Text="R"
                                                   Grid.Column="0"
                                                   Grid.Row="0" 
                                                   VerticalAlignment="Center" />
                                        <Slider Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=R}" 
                                                Grid.Column="1"
                                                Grid.Row="0"
                                                Minimum="0" Maximum="255"/>
                                        <Controls:NumericUpDown Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=R}"
                                                                Grid.Column="2"
                                                                Grid.Row="0" 
                                                                Margin="2"
                                                                Minimum="0" Maximum="255"/>

                                        <!-- G -->
                                        <TextBlock Text="G"
                                                   Grid.Column="0"
                                                   Grid.Row="1" 
                                                   VerticalAlignment="Center" />
                                        <Slider Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=G}" 
                                                Grid.Column="1"
                                                Grid.Row="1"
                                                Minimum="0" Maximum="255"/>
                                        <Controls:NumericUpDown Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=G}"
                                                                Grid.Column="2"
                                                                Grid.Row="1" 
                                                                Margin="2"
                                                                Minimum="0" Maximum="255"/>

                                        <!-- B -->
                                        <TextBlock Text="B"
                                                   Grid.Column="0"
                                                   Grid.Row="2"
                                                   VerticalAlignment="Center" />
                                        <Slider Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=B}" 
                                                Grid.Column="1"
                                                Grid.Row="2" 
                                                Minimum="0" Maximum="255"/>
                                        <Controls:NumericUpDown Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=B}"
                                                                Grid.Column="2"
                                                                Grid.Row="2" 
                                                                Margin="2"
                                                                Minimum="0" Maximum="255"/>

                                        <!-- H -->
                                        <TextBlock Text="H"
                                                   Grid.Column="0"
                                                   Grid.Row="3"
                                                   Margin="0,8,0,0"
                                                   VerticalAlignment="Center" />
                                        <Slider Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Hue}" 
                                                Grid.Column="1"
                                                Grid.Row="3" 
                                                Margin="0,8,0,0"
                                                Minimum="0" Maximum="360" />
                                        <Controls:NumericUpDown Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Hue}"
                                                                Grid.Column="2"
                                                                Grid.Row="3" 
                                                                Margin="2,10,2,2"
                                                                Minimum="0" Maximum="360"
                                                                StringFormat="0 °"/>

                                        <!-- S -->
                                        <TextBlock Text="S"
                                                   Grid.Column="0"
                                                   Grid.Row="4"
                                                   VerticalAlignment="Center" />
                                        <Slider Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Saturation}" 
                                                Grid.Column="1"
                                                Grid.Row="4" 
                                                Minimum="0" Maximum="100"/>
                                        <Controls:NumericUpDown Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Saturation}"
                                                                Grid.Column="2"
                                                                Grid.Row="4" 
                                                                Margin="2"
                                                                Minimum="0" Maximum="100"
                                                                StringFormat="p0"/>

                                        <!-- Value -->
                                        <TextBlock Text="V"
                                                   Grid.Column="0"
                                                   Grid.Row="5"
                                                   VerticalAlignment="Center" />
                                        <Slider Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value}" 
                                                Grid.Column="1"
                                                Grid.Row="5" 
                                                Minimum="0" Maximum="100"/>
                                        <Controls:NumericUpDown Value="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Value}"
                                                                Grid.Column="2"
                                                                Grid.Row="5" 
                                                                Margin="2"
                                                                Minimum="0" Maximum="100"
                                                                StringFormat="p0"/>
                                        
                                        <!-- HTML String und Name -->

                                        <Grid Grid.Row="6" Grid.ColumnSpan="3" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Hex-Code "
                                                   Grid.Column="0"
                                                   Grid.Row="0"
                                                   VerticalAlignment="Center" />
                                            <TextBox Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=HexCode, Mode=TwoWay, ValidatesOnExceptions=True}"
                                                     Grid.Column="1"
                                                     Grid.Row="0"
                                                     Margin="2"/>
                                            <TextBlock Text="Name "
                                                   Grid.Column="0"
                                                   Grid.Row="1"
                                                   VerticalAlignment="Center" />
                                            <TextBox Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ColorName, Mode=OneWay, TargetNullValue='Unknown'}"
                                                     IsReadOnly="True"
                                                     Grid.Column="1"
                                                     Grid.Row="1"
                                                     Margin="2"/>
                                        </Grid>
                                        
                                    </Grid>
                                </ScrollViewer>
                                
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>