<mah:MetroWindow x:Class="MahApps.Metro.Tests.DateAndTimePickerWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 d:DesignHeight="300"
                 d:DesignWidth="300"
                 mc:Ignorable="d">
    <StackPanel>
        <mah:DateTimePicker x:Name="TheDateTimePicker"
                            Culture="pt-BR"
                            SelectedDateTime="08/31/2016 14:00:01" />
        <mah:DateTimePicker x:Name="TheDateTimeFormatPicker"
                            Culture="it-IT"
                            SelectedDateTime="08/31/2016 14:00:01" />
        <mah:TimePicker x:Name="TheTimePickerDe"
                        Culture="de-DE"
                        SelectedDateTime="14:00:01" />
        <mah:TimePicker x:Name="TheTimePickerUs"
                        Culture="en-US"
                        SelectedDateTime="14:00:01" />
        <mah:TimePicker x:Name="TheTimePickerCsCz"
                        Culture="cs-CZ"
                        SelectedDateTime="22:23:24" />
        <mah:TimePicker x:Name="EmptyTimePicker" />
    </StackPanel>
</mah:MetroWindow>