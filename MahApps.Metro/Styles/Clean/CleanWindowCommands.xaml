<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:MahApps.Metro.Controls">

    <Style x:Key="CleanWindowCommandsStyleKey"
           TargetType="{x:Type Controls:WindowCommands}">
		
		<Setter Property="Controls:ControlsHelper.PreserveTextCase"
                Value="False" />
        <Setter Property="ShowLastSeparator"
                Value="False" />
        <Setter Property="SeparatorHeight"
                Value="11" />
        
    </Style>

</ResourceDictionary>