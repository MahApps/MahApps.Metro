                              Stretch="Uniform"
                              UseLayoutRounding="False" />
                        <Path x:Name="Blur"
                              Width="10"
                              Height="6"
                              Margin="0.5,0,0.5,0"
                              Fill="{DynamicResource BlackBrush}"
                              Opacity="0"
                              Data="F1 M 531.107,321.943L 541.537,321.943L 536.322,328.042L 531.107,321.943 Z "
                              Stretch="Uniform"
                              UseLayoutRounding="False">
                            <Path.Effect>
