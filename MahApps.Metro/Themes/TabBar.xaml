<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:MahApps.Metro.Controls">


    <ControlTemplate x:Key="TabBarTemplate" TargetType="{x:Type Controls:TabBar}">
        <Grid x:Name="root">
            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Width="{TemplateBinding SidebarWidth}" x:Name="SideBarGrid">
                        <Grid.Background>
                            <SolidColorBrush Color="#FF252525"/>
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!--20%-->
                            <RowDefinition Height="Auto"/>
                            <!--60%-->
                            <RowDefinition Height="*"/>
                            <!--20%-->
                        </Grid.RowDefinitions>

                        <ContentPresenter ContentSource="UpperTabBarContent" Height="Auto" Grid.Row="0"/>

                        <ListBox x:Name="PART_TabItems" SelectedIndex="{Binding SelectedIndex, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                 Height="Auto" MinHeight="75" BorderThickness="0" Width="{TemplateBinding SidebarWidth}" Background="Transparent"
                                 Grid.Row="1">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border>
                                        <StackPanel Orientation="Horizontal">
                                            <ContentPresenter Content="{Binding Icon}" x:Name="Icon" ToolTip="{Binding Header}"/>
                                            
                                            <Label Content="{Binding Header}" x:Name="HeaderLabel" FontSize="15" Padding="10 0 0 0" Margin="20 5 0 5">
                                                <Label.Foreground>
                                                    <SolidColorBrush Color="{DynamicResource WhiteColor}"/>
                                                </Label.Foreground>
                                            </Label>
                                        </StackPanel>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Controls:TabBar},Path=IsCollapsed}" Value="True">
                                            <Setter TargetName="HeaderLabel" Property="Visibility" Value="Collapsed"/>
                                            <Setter TargetName="Icon" Property="HorizontalAlignment" Value="Center"/>
                                            <Setter TargetName="Icon" Property="Margin" Value="30 0 0 0"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <ContentPresenter ContentSource="LowerTabBarContent" MinHeight="50" Height="Auto" Grid.Row="2"/>

                    </Grid>

                    <Controls:MetroContentControl Content="{TemplateBinding SelectedItem}" Grid.Column="1"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" x:Name="PART_Presenter" />
                </Grid>
            </Border>
        </Grid>
        
        <ControlTemplate.Triggers>
            <DataTrigger Binding="{Binding IsCollapsed, RelativeSource={RelativeSource Self}}" Value="True">
                <Setter TargetName="SideBarGrid" Property="Width" Value="100"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style TargetType="{x:Type Controls:TabBar}">
        <Setter Property="MinHeight" Value="100"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Selector.IsSynchronizedWithCurrentItem" Value="True"/>
        <Setter Property="Template" Value="{StaticResource TabBarTemplate}"/>
    </Style>
    <Style TargetType="{x:Type Controls:TabBarItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:TabBarItem}">
                    <Border 
                        Name="Border"
                        Margin="0,0,-4,0"
                        BorderThickness="1,1,1,1" 
                        CornerRadius="2,12,0,0" >
                        <ContentPresenter x:Name="ContentSite"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                          ContentSource="Content"
                          Margin="12,2,12,2"
                          RecognizesAccessKey="True"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>